<!DOCTYPE html>
<html>
<head>
	<title>Imager</title>
	<link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
	<header class="header">
		<div class="headbar">
			<h1 class="logo">Imager</h1>
			<nav class="nav">
				<ul>
					<li><a href="/">首页</a></li>
					<li><a href="/action">操作</a></li>
					<li><a href="/detail">情况</a></li>
					<li><a href="/help">帮助</a></li>
				</ul>
			</nav>
		</div>
	</header>
	<section class="container">
		<div class="action">
			<h2>当前目录: <%= folder%></h2>
			<ul>
				<% result.forEach(function(item){ %>  
					<% if (item.type == 'folder') { %>
						<li class="folder">
							<a href="#" target="blank"><%= item.name%></a>
							<span class="date">最后修改时间：<%= item.last_modified%></span>
						</li>
					<% } else { %>
						<li class="files">
							<a href="/<%= item.name%>" target="blank"><%= item.name%></a>
							<span class="date">最后修改时间：<%= item.last_modified%></span>
						</li>
					<% } %>
				<% }) %>
			</ul>
		</div>
	</section>
	<footer class="footer">
		<p>图片CDN上传工具</p>
	</footer>
</body>
</html>
